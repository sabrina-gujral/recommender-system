<%- include("partials/header"); -%>
<%- include("partials/nav"); -%>

<div class="container intro">
    <h3 class="intro-id-rec">Recommendations For <%= movie %></h3>
  </div>
    <div class="container">
        <div class="row">
        
          <% for(var i = 0; i < title.length; ++i) { %>
          <div class="col-md-3 wrapper">
            <div id="<%= 'movie' + i %>" class="rec-card">
              <div class="rec-img-div">
                <a href="/<%= title[i] %>"
                  ><img class="rec-img" src="<%= posters[i] %>" alt="poster"
                />
                <div class="rating">
                  <div class="rating-inner">
                    
                    <p class="text">Director <br> <span class="text-lg"><%= director[i] %></span></p>
                  </div>
                </div>
              </a>
                <a href="<%= urls[i] %>"><i class="fa fa-link link"></i></a>
              </div>
              <small class="rec-title" name="" ><%= title[i] %></small>
          <!-- <small class="rec-title">Director: <%= director[i] %></small> -->

              <hr />
              <small class="rec-genres"><%= genres[i] %> </small>
            </div>
          </div>
          <br />
          <% } %>
        
        </div>
      </div>
<%- include("partials/footer"); -%>